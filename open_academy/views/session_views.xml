<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="course_session_tree" model="ir.ui.view">
            <field name="name">course.session.tree</field>
            <field name="model">course.session</field>
            <field name="arch" type="xml">
                <tree>
                    <header>
                        <button name="%(open_academy.action_view_session_wizard)d" type="action" string="Assign Instructor"/>
                    </header>
                    <field name="name" />
                    <field name="attendee_ids" widget="many2many_tags"/>
                    <field name="start_datetime"/>
                    <field name="end_datetime"/>
                    <field name="duration"/>
                </tree>
            </field>
        </record>

        <record id="course_session_form" model="ir.ui.view">
            <field name="name">course.session.form</field>
            <field name="model">course.session</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button type="object" name="action_confirm" string="Confirm" />
                    </header>
                    <sheet>
                        <div class="o_row">
                            <label for="name" string="Session Name" />
                            <field name="name" />
                        </div>
                        <group>
                            <group>
                                <!-- <field name="course_name" readonly="0"/> -->
                                <field name="course_id" string="Related Course" context="{'show_state': True, }" domain="[('state', 'in', ['new', 'confirm'])]"/>
                                <field name="instructor_id"/>
                            </group>
                            <group>
                                <field name="start_datetime" />
                                <field name="end_datetime" />
                                <field name="duration"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="attendees" string="Attendees">
                                <field name="attendee_ids" no_label="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="course_session_search" model="ir.ui.view">
            <field name="name">course.session.search</field>
            <field name="model">course.session</field>
            <field name="arch" type="xml">
                <search>
                    <field name="duration"/>
                    <field name="name"/>
                    <filter name="future_sessions" string="Future Sessions"
                        domain="[('start_datetime', '&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0)))]"/>
                    <group>
                        <filter name="course_groups" string="Course" context="{'group_by': 'course_id'}" />
                    </group>
                </search>
            </field>
        </record>

        <record id="course_session_calendar" model="ir.ui.view">
            <field name="name">course.session.calendar</field>
            <field name="model">course.session</field>
            <field name="arch" type="xml">
                <calendar color="course_id" date_start="start_datetime">
                    <field name="name"/>
                    <field name="instructor_id"/>
                    <field name="course_id" filters="1" />
                </calendar>
            </field>
        </record>

        <record id="course_session_graph" model="ir.ui.view">
            <field name="name">course.session.graph</field>
            <field name="model">course.session</field>
            <field name="arch" type="xml">
                <graph type="bar">
                    <field name="course_id"/>
                </graph>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_sessions">
   		    <field name="name">Sessions</field>
            <field name="res_model">course.session</field>
 		    <field name="view_mode">tree,form,calendar,graph</field>
            <field name="context">{'search_default_future_sessions': 1, 'default_name': 'Test Course', 'my_session': True}</field>
 	    </record>

        <menuitem name="Session" id="menu_session" parent="menu_openacademy_root"/>
        <menuitem name="Session" id="menu_session_action" parent="menu_session" action="action_sessions"/>
    </data>
</odoo>