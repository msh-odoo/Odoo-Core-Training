<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data noupdate="0">

    <!-- Categories -->
    <record model="ir.module.category" id="module_category_open_academy">
        <field name="name">Open Academy</field>
        <field name="description">Helps you handle your Courses and Sessions.</field>
        <field name="sequence">10</field>
    </record>

    <record model="ir.module.category" id="module_category_open_academy2">
        <field name="name">Open Academy</field>
        <field name="description">Helps you handle your Course and Sessions</field>
        <field name="sequence">10</field>
        <field name="parent_id" ref="module_category_open_academy"/>
    </record>

    <!-- Access Rights -->
    <record id="group_open_academy_student" model="res.groups">
        <field name="name">Student</field>
        <field name="category_id" ref="module_category_open_academy2"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="base.default_user" model="res.users">
        <field name="groups_id" eval="[(4,ref('open_academy.group_open_academy_student'))]"/>
    </record>

    <record id="group_open_academy_instructor" model="res.groups">
        <field name="name">Instructor</field>
        <field name="category_id" ref="module_category_open_academy2"/>
        <field name="implied_ids" eval="[(4, ref('group_open_academy_student'))]"/>
    </record>

    <record id="group_open_academy_admin" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="module_category_open_academy2"/>
        <field name="implied_ids" eval="[(4, ref('group_open_academy_instructor'))]"/>
    </record>

    <!-- Record Rules -->
    <record id="open_academy_session_rule_student" model="ir.rule">
        <field name="name">Student Sessions</field>
        <field name="model_id" ref="model_course_session"/>
        <field name="domain_force">[('attendee_ids','in', [user.partner_id.id])]</field>
        <field name="groups" eval="[(4, ref('open_academy.group_open_academy_student'))]"/>
    </record>

    <record id="open_academy_session_rule_instructor" model="ir.rule">
        <field name="name">Instructor Sessions</field>
        <field name="model_id" ref="model_course_session"/>
        <field name="domain_force">[('instructor_id','=', user.partner_id.id)]</field>
        <field name="groups" eval="[(4, ref('open_academy.group_open_academy_instructor'))]"/>
    </record>

    <record id="open_academy_session_rule_admin" model="ir.rule">
        <field name="name">Admin Sessions</field>
        <field name="model_id" ref="model_course_session"/>
        <field name="domain_force">[(1,'=', 1)]</field>
        <field name="groups" eval="[(4, ref('open_academy.group_open_academy_admin'))]"/>
    </record>

</data>
</odoo>