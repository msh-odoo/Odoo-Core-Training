<?xml version="1.0"?>
<odoo>
    <data>
        <record id="course_view_tree" model="ir.ui.view">
            <field name="name">course.view.tree</field>
            <field name="model">course.course</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="course_view_form" model="ir.ui.view">
            <field name="name">course.view.form</field>
            <field name="model">course.course</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="state"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="sessions" string="Sessions">
                                <field name="session_ids"/>
                            </page>
                            <page name="details" string="Details">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_course" model="ir.actions.act_window">
            <field name="name">Course</field>
            <field name="res_model">course.course</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            id="open_academy_root"
            name="Open Academy"/>
        <menuitem
            id="open_academy_course"
            name="Course"
            parent="open_academy_root"
            action="action_course"/>
    </data>
</odoo>
