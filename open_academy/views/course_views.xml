<?xml version="1.0"?>
<odoo>
    <data>
        <record id="course_view_tree" model="ir.ui.view">
            <field name="name">course.view.tree</field>
            <field name="model">course.course</field>
            <field name="arch" type="xml">
                <tree multi_edit="1">
                    <field name="name"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="course_view_form" model="ir.ui.view">
            <field name="name">course.view.form</field>
            <field name="model">course.course</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <!-- <button name="%(action_session)d" type="action" string="Sessions" class="btn-primary" /> -->
                        <button name="action_confirm" type="object" string="Confirm" class="btn-primary" />
                        <field name="state" widget="statusbar" statusbar_visible="new,confirm,cancel"/>
                    </header>
                    <sheet>
                        <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}"/>
                        <div class="oe_title">
                            <label for="name" string="Course Title"/>
                            <h1><field name="name" default_focus="1" placeholder="e.g. Computer Science for kids"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="active"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Sessions">
                                <field name="session_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="start_datetime"/>
                                        <field name="end_datetime"/>
                                        <field name="course_id"/>
                                        <field name="instructor_id"/>
                                        <field name="duration"/>
                                    </tree>
                                    <form>
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="name"/>
                                                    <field name="instructor_id"/>
                                                    <field name="course_id" invisible="1"/>
                                                </group>
                                                <group>
                                                    <field name="start_datetime"/>
                                                    <field name="end_datetime"/>
                                                    <field name="duration"/>
                                                </group>
                                            </group>
                                            <group>
                                                <field name="attendee_ids" widget="many2many_tags"/>
                                            </group>
                                            <group>
                                                <field name="description"/>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                            <page name="details" string="Details">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="course_view_search" model="ir.ui.view">
            <field name="name">course.view.search</field>
            <field name="model">course.course</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="description"/>
                    <filter name="confirm_courses" string="Confirm" domain="[('state', '=', 'confirm')]"/>
                    <separator/>
                    <filter name="new_courses" string="New" domain="[('state', '=', 'new')]"/>
                    <group>
                        <filter name="groupby_state" string="State" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_course" model="ir.actions.act_window">
            <field name="name">Course</field>
            <field name="res_model">course.course</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            id="open_academy_course"
            name="Course"
            parent="open_academy_root"
            action="action_course"/>
    </data>
</odoo>
