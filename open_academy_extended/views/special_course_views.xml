<?xml version="1.0"?>
<odoo>
    <data>
        <record id="special_course_view_tree" model="ir.ui.view">
            <field name="name">special.course.view.tree</field>
            <field name="model">special.course</field>
            <field name="arch" type="xml">
                <tree multi_edit="1">
                    <field name="name"/>
                    <field name="state"/>
                    <field name="special_price"/>
                </tree>
            </field>
        </record>

        <record id="special_course_view_form" model="ir.ui.view">
            <field name="name">special.course.view.form</field>
            <field name="model">special.course</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="new,confirm,cancel"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="special_price"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="sessions" string="Sessions">
                                <field name="session_ids"/>
                            </page>
                            <page name="details" string="Details">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_special_course" model="ir.actions.act_window">
            <field name="name">Special Course</field>
            <field name="res_model">special.course</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            id="open_academy_special_course"
            name="Special Course"
            parent="open_academy.open_academy_root"
            action="action_special_course"/>
    </data>
</odoo>