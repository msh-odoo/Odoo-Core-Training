<?xml version="1.0"?>
<odoo>
    <data>
        <record id="session_view_tree" model="ir.ui.view">
            <field name="name">course.session.view.tree</field>
            <field name="model">course.session</field>
            <field name="arch" type="xml">
                <tree multi_edit="1">
                    <field name="name"/>
                    <field name="start_datetime"/>
                    <field name="end_datetime"/>
                    <field name="course_id"/>
                    <field name="instructor_id"/>
                    <field name="duration"/>
                </tree>
            </field>
        </record>

        <record id="session_view_form" model="ir.ui.view">
            <field name="name">course.session.view.form</field>
            <field name="model">course.session</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="course_id"/>
                                <field name="course_name"/>
                                <field name="instructor_id"/>
                            </group>
                            <group>
                                <field name="start_datetime"/>
                                <field name="end_datetime"/>
                                <field name="duration"/>
                            </group>
                        </group>
                        <group>
                            <field name="attendee_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_session" model="ir.actions.act_window">
            <field name="name">Sessions</field>
            <field name="res_model">course.session</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            id="open_academy_sessions"
            name="Sessions"
            parent="open_academy_root"
            action="action_session"/>
    </data>
</odoo>